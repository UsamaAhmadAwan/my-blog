<h1 class="text-center mt-4">Edit Article</h1>
<div class="container">
<div class="row justify-content-center">
</div class= "col-10">
<%= render 'layouts/shared/errors' %>

<%= form_with(model: @article, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>

<%= form_with(model: @article) do |form| %>
  <div class="form-group row">
    <%= form.label :title, class: "col-2 col-form-label " %>
    <div class="col-10">
      <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "edit title of article" %>
    </div>
  </div>
  <!-- Other form fields here -->
<!-- <% end %> -->


<div class="form-group row"> 
    <%= f.label :description, class: "col-2 col-form-label" %>
    <div class="col-10">

    <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
</div>
</div>
<div class="form-group row justify-content-center">

    <%= f.submit class: "btn btn-outline-light btn-lg" %>
</div>

<% end %>
</div>
<%= link_to '[ Cancel and return to article listing ]', article_path, class: "text-info" %> 
</div>
</div>